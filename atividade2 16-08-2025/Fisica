package atividade2;

public class Fisica extends Pessoa{
    private double gastos_s;

    public Fisica(String nome, double renda, double gastos){
        super(nome, renda);
        this.gastos_s = gastos;
    }

    @Override
    public double calcularImposto(){
        double tirar = this.gastos_s * 0.5;
        if (this.getRenda() < 20000) return (this.getRenda() * 0.15 - tirar);
        else return (this.getRenda() * 0.25 - tirar);
    }
}
